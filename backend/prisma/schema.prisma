// This tells Prisma how to generate the client
generator client {
  provider = "prisma-client-js"
}

// This tells Prisma how to connect to your database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - represents teachers and students
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      Role     @default(TEACHER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  taughtClasses     Class[]             @relation("TeacherClasses")
  enrollments       StudentEnrollment[]
}

// Class model - represents a class/course
model Class {
  id          String   @id @default(uuid())
  name        String
  description String?
  teacherId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  teacher     User                @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade)
  enrollments StudentEnrollment[]
  
  @@index([teacherId])
}

// StudentEnrollment model - join table between Class and User (students)
model StudentEnrollment {
  id        String   @id @default(uuid())
  classId   String
  studentId String
  createdAt DateTime @default(now())
  
  // Relations
  class     Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  student   User  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  // A student can only be enrolled in a class once
  @@unique([classId, studentId])
  @@index([classId])
  @@index([studentId])
}

// Role enum - defines user types
enum Role {
  TEACHER
  STUDENT
  ADMIN
}