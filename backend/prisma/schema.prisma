// This tells Prisma how to generate the client
generator client {
  provider = "prisma-client-js"
}

// This tells Prisma how to connect to your database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Role enum - defines user types
enum Role {
  TEACHER
  STUDENT
  ADMIN
  REFERENT
}

// User model - represents teachers and students
model User {
  id             String   @id @default(uuid())
  email          String   @unique
  lastname       String
  name           String
  password       String
  firstname      String
  username       String   @unique
  profilePic     String?
  subscriptionId String?
  role           Role     @default(TEACHER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  classes Class[]

  teacher Teacher?
}

model Subscription {
  id        String   @id @default(uuid())
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users User[]
}

model Teacher {
  id        String   @id @default(uuid())
  userId    String?  @unique
  name      String
  lastname  String
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  classes Class[]  @relation("ClassTeachers")
  lessons Lesson[]
}

// Class model - represents a class/course
model Class {
  id           String   @id @default(uuid())
  name         String
  description  String?
  academicYear String
  gradeLevel   String
  isActive     Boolean  @default(true)
  referentId   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  referent User      @relation(fields: [referentId], references: [id], onDelete: Cascade)
  teachers Teacher[] @relation("ClassTeachers")
  lessons  Lesson[]
}

model Lesson {
  id          String   @id @default(uuid())
  title       String
  description String?
  classId     String
  teacherId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([teacherId])
  // Relations
  @@index([classId])
}
